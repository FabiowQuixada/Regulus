
extends ../layouts/main

block styles
    link(rel='stylesheet', href='/css/product.css')

block content
    .grid
        article.card.product-item
            header.card__header
                h1.product__title #{product.title}
            .card__image
                img(src=`${product.imagePath}`, alt=`${product.title}`)
                // TODO Image not displayed
            div #{product.imagePath}
            .card__content
                h2.product__price #{product.price.format()}
                p.product__description #{product.description}
                p Author: #{product.author}
                p Language: #{product.language}
                p Country: #{product.country}
                if product.pageQty
                    p Pages: #{product.pageQty}
                p Year: #{product.year}
                if product.moreInfoUrl
                    p More info: #{product.moreInfoUrl}
            .card__actions
                include ../includes/product/add-to-cart
