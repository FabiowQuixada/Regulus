block navigation
    nav.navbar.navbar-expand-lg.bg-body-tertiary
        .container-fluid
            a.navbar-brand(href='/')
                img.d-inline-block.align-text-top(src='/images/icons/logo.png' alt='Logo' width='30' height='24')
                | Regulus
            .cart-data.d-flex
                a(href='/cart', class=(path === '/cart' ? 'active' : ''))
                    svg.bi.bi-handbag(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewbox='0 0 16 16')
                        path(d='M8 1a2 2 0 0 1 2 2v2H6V3a2 2 0 0 1 2-2m3 4V3a3 3 0 1 0-6 0v2H3.36a1.5 1.5 0 0 0-1.483 1.277L.85 13.13A2.5 2.5 0 0 0 3.322 16h9.355a2.5 2.5 0 0 0 2.473-2.87l-1.028-6.853A1.5 1.5 0 0 0 12.64 5zm-1 1v1.5a.5.5 0 0 0 1 0V6h1.639a.5.5 0 0 1 .494.426l1.028 6.851A1.5 1.5 0 0 1 12.678 15H3.322a1.5 1.5 0 0 1-1.483-1.723l1.028-6.851A.5.5 0 0 1 3.36 6H5v1.5a.5.5 0 1 0 1 0V6z')
                    if cartProductQty > 0
                        .product-quantity
                            | #{cartProductQty}
            button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarSupportedContent.collapse.navbar-collapse
                // Mobile menu
                ul.navbar-nav.me-auto.mb-2.mb-lg-0
                    if isUserLoggedIn
                        li.nav-item.d-block.d-md-none
                            a.dropdown-item(href='/account') My Account
                        li.nav-item.d-block.d-md-none
                            a.dropdown-item(href='#') Personal Info
                        li.nav-item.d-block.d-md-none
                            a.dropdown-item(href='/account/orders') My Orders
                        li.nav-item.d-block.d-md-none
                            a.dropdown-item(href='/account/addresses') My Addresses
                        li.nav-item.d-block.d-md-none
                            a.dropdown-item(href='/account/orders') My Payment methods
                        li.nav-item.d-block.d-md-none
                            hr.dropdown-divider
                        li.nav-item.d-block.d-md-none
                            form.d-flex(action='/logout' method='POST')
                                button.btn.btn-outline-success(type='submit')
                                    | Logout
                    else
                        li.nav-item.d-block.d-md-none
                            a.dropdown-item(href='/login', class=(path === '/login' ? 'active' : '')) Login
                        li.nav-item.d-block.d-md-none
                            a.dropdown-item(href='/signup', class=(path === '/signup' ? 'active' : '')) Signup
                // Desktop menu
                .dropdown.d-none.d-md-block
                    a.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                        if isUserLoggedIn
                            | Hi, #{userName}!
                        else
                            | Hi, guest!
                    ul.dropdown-menu
                        if isUserLoggedIn
                            li
                                a.dropdown-item(href='/account') My Account
                            li
                                a.dropdown-item(href='#') Personal Info
                            li
                                a.dropdown-item(href='/account/orders') My Orders
                            li
                                a.dropdown-item(href='/account/addresses') My Addresses
                            li
                                a.dropdown-item(href='/account/orders') My Payment methods
                            li
                                hr.dropdown-divider
                            li
                                form.dropdown-item.d-flex(action='/logout' method='POST')
                                    button.btn.btn-outline-success(type='submit')
                                        | Logout
                        else
                            li.nav-item
                                a.dropdown-item(href='/login', class=(path === '/login' ? 'active' : '')) Login
                            li.nav-item
                                a.dropdown-item(href='/signup', class=(path === '/signup' ? 'active' : '')) Signup
